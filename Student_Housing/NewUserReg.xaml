            <ComboBoxItem x:Name="cboiDoubleRm" Content="Double Room"/>
        </ComboBox>

        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" Margin="24,0,74,10" Grid.Row="2">
            <TextBlock x:Name="tbx" HorizontalAlignment="Left" Margin="29,493,-137,-505" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="285" Height="56" RenderTransformOrigin="0.492,1.66"/>
