        <TextBox x:Name="tbxMobile" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="10,54,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TabIndex="2"/>
