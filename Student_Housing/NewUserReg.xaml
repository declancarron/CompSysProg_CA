        <!--Gender Selections-->
        <ComboBox x:Name="cboGender" Grid.Column="1" HorizontalAlignment="Left" Margin="10,295,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Height="22" SelectionChanged="cboGender_SelectionChanged" TabIndex="10">
