            <ComboBoxItem x:Name="cboiYr2" Content="2nd Year Degree"/>
            <ComboBoxItem x:Name="cboiYr3" Content="3rd Year Degree"/>
            <ComboBoxItem x:Name="cboiYr5" Content="UnderGrad Degree"/>
            <ComboBoxItem x:Name="cboiYr6" Content="PostGrad Degree"/>
