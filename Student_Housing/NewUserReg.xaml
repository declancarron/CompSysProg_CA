        <Label x:Name="lblGender" Content="Gender" HorizontalAlignment="Left" Margin="24,290,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="49"/>
        <Label x:Name="lblMarriedStatus" Content="Married Status" HorizontalAlignment="Left" Margin="24,316,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="87"/>
