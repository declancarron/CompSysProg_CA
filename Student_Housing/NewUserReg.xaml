        <TextBox x:Name="tbxHomeCounty" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="10,192,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="185" TabIndex="7"/>
        <TextBox x:Name="tbxHomeCountry" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="10,220,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="185" TabIndex="8"/>
