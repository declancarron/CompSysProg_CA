<Window x:Class="Student_Housing.PwdResetScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Housing"
        mc:Ignorable="d"
        Title="PwdResetScreen" WindowStartupLocation="CenterScreen" WindowStyle="None" Height="204.255" Width="404.255">
    <Grid>
        <Label x:Name="lblPwdEmail" Content="Email address" ToolTip="Please enter your email address" HorizontalAlignment="Left" Margin="33,57,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxPwdEmailAddr" HorizontalAlignment="Left" Height="23" Margin="136,57,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="223"/>
        <Button x:Name="btnPwdResetSubmit" Content="Submit" HorizontalAlignment="Left" Margin="199,112,0,0" VerticalAlignment="Top" Width="75" Click="btnPwdResetSubmit_Click"/>
        <Button x:Name="btnPwdResetCancel" Content="Cancel" HorizontalAlignment="Left" Margin="284,112,0,0" VerticalAlignment="Top" Width="75" Click="btnPwdResetCancel_Click"/>
        <Label x:Name="lblPwdResetHeader" Content="Enter Your Email Address to retrieve your Password" HorizontalAlignment="Left" Margin="33,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
